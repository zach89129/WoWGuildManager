    <div class="editForm">
        <% if(singleChar.items.length  < 3 ) {%> 
        <form action="/<%=guild%>/characters/<%= singleChar._id %>/editWishlist" method="post" class="form-style-7">
            <ul>
            <li>
                <label for="name">Item Name</label>
                <input type="text" placeholder="Name" name="name" maxlength="100">
                <span>Enter item name here</span>
            </li>
            <li>
                <label for="class">Link to WowHead</label>
                <input type="text" placeholder="Link" name="link" maxlength="100">
                <span>Enter the link to the WowHead page</span>
            </li>
            <li>
                <label for="specialization">Boss/PvP</label>
                <input type="text" placeholder="Boss" name="boss"  maxlength="100">
                <span>Where does this item drop from?</span>
            </li>
            <li>
                <label for="slot">Gear Slot</label>
                <input type="text" placeholder="Slot" name="slot"  maxlength="100">
                <span>Where do you equip this item?</span>
            </li>
            <li>
                <label for="material">Material</label>
                <input type="text" placeholder="Material" name="material"  maxlength="100">
                <span>What material is the item? Cloth? Plate? A weapon?</span>
            </li>
            <li>
                <label for="priority">Wishlist Priority</label>
                <input type="number" placeholder="Priority" name="priority"  maxlength="100">
                <span>Priority of item on your Wishlist (1-3)</span>
            </li>
            <li>
                <input type="submit" value="Submit" >
            </li>
            </ul>
            </form>
        <% } %> 

        <% if (invalid){ %>
            <div style="color: red;">You've already set that priority!</div> 
            <% } %> 
    
    </div>
    
   
